{
  "name": "bot-haesim-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:ollama": "docker build -t ollama-server ./apps/ollama",
    "start:ollama": "docker run --rm -p 11434:11434 ollama-server"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=23.0.0"
  },
  "packageManager": "yarn@1.22.21"
}